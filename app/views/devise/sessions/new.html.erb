
<section class="h-100 mt-5">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9 mt-4 mb-4">				
					<div class="card shadow-lg">
						<div class="card-body p-5">
						<h1 class="fs-4 card-title fw-bold mb-4 text-center">LOGIN</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
  <%= f.label :email,class:"mb-2 text-dark" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :password ,class:"text-dark"%>
  <%= f.password_field :password, autocomplete: "current-password" %>
</div>

<% if devise_mapping.rememberable? %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me,class:"text-dark" %>
<% end %>

<div class="actions button1 d-flex justify-content-end ">
  <%= f.submit "Log in",class: "btn btn-success "%>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</section>